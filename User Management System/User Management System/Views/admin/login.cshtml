
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="../../css/styles.css" rel="stylesheet">
    <title>login</title>
</head>
<body>
    <div class="container1 form" style="float:left;">
        <h1>Admin Login</h1>
        <form name="loginForm" method="post" action="/admin/login">
            Login: <input id="txtLogin" name="txtLogin" value="@ViewBag.txtLogin" /> <br>
            Password: <input id="txtPassword" name="txtPassword" type="password" /> <br>
            <span id="errorSpan" style="color:red">@ViewBag.msg</span>
            <input type="submit" name="btnLogin" id="btnLogin" value="Login" />
            <input class="cancelbtn" type="reset" value="cancel" id="btnReset" />
        </form>
    </div>
</body>
</html>
